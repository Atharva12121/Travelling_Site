<% layout("/layouts/boilerplate.ejs") %>


    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Create a New Listings</h3>
            <br>
            <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="md-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Add Title" class="form-control" required>
                    <div class="valid-feedback">
                        Title fill Sucessfully
                    </div>
                </div>

                <div class="md-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]" class="form-control" placeholder="Description" required></textarea>
                    <div class="invalid-feedback">
                        Fill short description
                    </div>
                </div>

                <!-- <div class="md-3">
                    <label for="image" class="form-label">image Link</label>
                    <input type="text" name="listing[image]" placeholder="Enter image URL/Link" class="form-control">
                </div> -->

                <!-- file image -->
                <div class="md-3">
                    <label for="image" class="form-label">Upload Listings Link</label>
                    <input type="file" name="listing[image]" class="form-control" required>
                </div>


                <div class="row">
                    <div class="md-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Enter price" class="form-control" required>
                        <div class="invalid-feedback">
                            Fill valide price
                        </div>
                    </div>
                    <div class="md-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" placeholder="INDIA" class="form-control" required>
                        <div class="invalid-feedback">
                            Fill valide country
                        </div>
                    </div>
                </div>

                <div class="md-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Nagpur,Mumbai" class="form-control" required>
                    <div class="invalid-feedback">
                        Fill valide Location
                    </div>
                </div>

                <br><br>
                <button class="btn btn-dark add-btn">Add</button>
            </form>
            <br><br>
            <br>
            <br><br>
        </div>
    </div>